<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".launch">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="230dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_launch_a" />

    <TextView
        android:id="@+id/fromTextView"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:text="From"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/srdesignTextView"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromTextView"
        android:layout_centerHorizontal="true"
        android:text="SDesignR"
        android:textColor="@color/color_darkblue"
        android:textSize="35sp" />

</RelativeLayout>