<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/textMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Mensaje"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/textNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMensaje"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Ncelular"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNumero"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@color/color_darkblue"
        android:gravity="center_horizontal|center_vertical"
        android:text="ADD Contact"
        android:textColor="@color/ap_white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@color/color_darkblue"
        android:text="CALL"
        android:textColor="@color/off_white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/color_darkblue"
        android:text="SEND"
        android:textColor="@color/ap_white"
        android:textSize="25sp" />
</RelativeLayout>